<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <androidx.cardview.widget.CardView
        android:id="@+id/sampleCardview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Horizontal LinearLayout for the content inside CardView -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/samplercbg"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            android:orientation="horizontal">

            <!-- Vertical LinearLayout for the left content -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="75dp"
                android:layout_marginLeft="5dp"
                android:layout_weight="3"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/headingTask"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="35sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:text="TextView" />

                <TextView
                    android:id="@+id/hintTask"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:text="TextView" />
            </LinearLayout>

            <!-- TextView for the right content -->
            <TextView
                android:id="@+id/timeToComplete"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_weight="1"
                android:text="TextView" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>
